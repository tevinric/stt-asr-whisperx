# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Model Configuration
WHISPER_MODEL=medium  # Options: tiny, base, small, medium, large
DEVICE=cuda  # Options: cuda, cpu
COMPUTE_TYPE=float16  # Options: float16, int8

# HuggingFace Token (optional - for better models)
HUGGINGFACE_TOKEN=your_token_here

# Audio Processing
MAX_FILE_SIZE=100MB
SUPPORTED_FORMATS=mp3,wav,m4a,flac
TEMP_DIR=/tmp/audio_processing

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
BATCH_SIZE=16
MAX_CONCURRENT_JOBS=5

# Storage (for production)
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost/diarization_db

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
